<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_203"
    android:id="@+id/chat_relative">
    <RelativeLayout
        android:id="@+id/chat_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:background="@color/mp_blue">
        <LinearLayout
            android:id="@+id/chat_title_liner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/chat_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模式"
                android:layout_gravity="center"
                android:theme="@style/title_font" />
            <TextView
                android:id="@+id/chat_speakers"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发音人"
                android:layout_gravity="center"
                android:theme="@style/title_font" />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/list_chat_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
        <ListView
            android:id="@+id/list_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@null"
            android:alpha="0.7"
            />
        <LinearLayout
            android:id="@+id/main_liner_tink"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:alpha="0.9"
            android:background="@drawable/dialog_backgroud">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/yuyin_img"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/voice_anim"
                />
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/chat_bottom"
        android:background="@color/gold_yellow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="right">
        <ImageView
            android:id="@+id/chat_speak"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/white_smoke"
            android:src="@mipmap/message_keyboard_background"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_marginRight="14dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/chat_send"
            android:layout_gravity="right|center_vertical"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@mipmap/upload_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/chat_context"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:hint="说出你想说的话"
            android:textSize="12sp"
            android:textColor="@color/blue_black"
            android:textColorHint="@color/blue_black"
            android:layout_centerVertical="true"
            android:theme="@style/style_about" />
        <Button
            android:id="@+id/chat_press_button"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/style_about"
            android:text="按住说话"/>
    </RelativeLayout>
</RelativeLayout>
