<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_203"
    android:id="@+id/chat_relative">
    <RelativeLayout
        android:id="@+id/chat_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:background="@color/mp_blue">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="私信"
            android:layout_gravity="center"
            android:theme="@style/title_font" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <ListView
            android:id="@+id/list_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@null"
            android:alpha="0.7"
            />
        <LinearLayout
            android:id="@+id/main_liner_tink"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:alpha="0.9"
            android:background="@drawable/dialog_backgroud">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/yuyin_img"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/voice_anim"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/fab_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="25dp"
            android:layout_marginBottom="25dp"
            android:src="@mipmap/order_detail_call69"
            android:background="@color/pink_red_toobar"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/chat_bottom"
        android:background="@color/gold_yellow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="right">
        <EditText
            android:id="@+id/chat_context"
            android:layout_marginLeft="74dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:hint="说出你想说的话"
            android:textSize="12sp"
            android:textColor="@color/blue_black"
            android:textColorHint="@color/blue_black"
            android:theme="@style/style_about"/>
        <ImageView
            android:layout_marginRight="14dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/chat_send"
            android:layout_gravity="right|center_vertical"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@mipmap/upload_icon"
            />
    </LinearLayout>
</RelativeLayout>
